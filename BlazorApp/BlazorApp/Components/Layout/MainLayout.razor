@inherits LayoutComponentBase
<RadzenComponents @rendermode="InteractiveAuto" />
    <div class="page">
        <div class="sidebar">
            <NavMenu />
        </div>

        <main>
            <div class="rz-text-align-right">
                <AuthorizeView>
                    <NotAuthorized>
                        <div class="text-right mt-2">
                            <span class="text-center fw-bolder"><a href="/login">Login</a></span>
                        </div>
                        
                        <hr>
                    </NotAuthorized>
                    <Authorized>
                        <RadzenProfileMenu>
                            <Template>
                                <RadzenGravatar Email="user@example.com">
                                </RadzenGravatar>
                            </Template>
                            <ChildContent>
                                <RadzenProfileMenuItem Text="Users list" Path="users" Icon="account_circle"></RadzenProfileMenuItem>
                                <RadzenProfileMenuItem Text="Users List with MudBlazor" Path="userswithmb" Icon="line_weight"></RadzenProfileMenuItem>
                                <RadzenProfileMenuItem Text="Counter" Path="counter" Icon="attach_file"></RadzenProfileMenuItem>
                                <RadzenProfileMenuItem Text="Weather" Path="weather" Icon="perm_media"></RadzenProfileMenuItem>
                                <hr>
                                <RadzenProfileMenuItem Text="Logout" Path="logout" Icon="perm_media"></RadzenProfileMenuItem>
                            </ChildContent>
                        </RadzenProfileMenu>
                    </Authorized>
                </AuthorizeView>
            </div>

            <article class="content px-4">
                @Body
            </article>
        </main>
    </div>

<div id="blazor-error-ui">
    An unhandled error has occurred.
    <a href="" class="reload">Reload</a>
    <a class="dismiss">🗙</a>
</div>
